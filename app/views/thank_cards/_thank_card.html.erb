<div class="feed-section_left">
  <div class="above-section">
    <div class="title">
      <div class="title-avatar">
        <%= image_tag(thank_card.user.image, width: '42px') if thank_card.user.image.present? %>
      </div>
      <h4 class="title-text"><%= thank_card.user.name %></h4>

      <p style="margin-left: 20px; margin-right: 20px;"><i>Thanks To:</i></p>

      <div class="title-avatar-to">
        <%= image_tag(thank_card.user.image, width: '20px') if thank_card.user.image.present? %>
      </div>
      <h4 class="title-text"><i><%= thank_card.user.name %></i></h4>
    </div>

    <div class="thankscard">
      <div class="card-list-item-show" style="background-image: url( <%= url_for(thank_card.card_template.background) %> )">
        <div class="card-list-inside-show" style="top: <%= thank_card.card_template.top %>px; right: <%= thank_card.card_template.right %>px; bottom: <%= thank_card.card_template.bottom %>px; left: <%= thank_card.card_template.left %>px">
          <%= thank_card.message %>
        </div>
      </div>
    </div>

    <div class="icons-feed">
      <% like = current_user.likes.find_by(thank_card: thank_card) %>
      <% if like.nil? %>
        <form action="/likes" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="like[thank_card_id]" value="<%= thank_card.id %>">
          <%= render 'like' %>
        </form>
      <% else %>
        <form action="<%= like_path(like) %>" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <input type="hidden" name="_method" value="DELETE">
          <%= render 'unlike' %>
        </form>
      <% end %>

      <svg aria-label="comment" class="_8-yf5 " color="#8e8e8e" fill="#8e8e8e" height="28" role="img" viewBox="0 0 24 24" width="28"><path d="M20.656 17.008a9.993 9.993 0 10-3.59 3.615L22 22z" fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></path></svg>

      <svg aria-label="share" class="_8-yf5 " color="#8e8e8e" fill="#8e8e8e" height="28" role="img" viewBox="0 0 24 24" width="28"><line fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2" x1="22" x2="9.218" y1="3" y2="10.083"></line><polygon fill="none" points="11.698 20.334 22 3.001 2 3.001 9.218 10.084 11.698 20.334" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></polygon></svg>
    </div>

    <div class="like">
      <%= thank_card.likes.count %> Like
    </div>

    <div class="title-time">
      Posted <%= time_ago_in_words(thank_card.created_at) %> ago.
    </div>  
  </div>

  <div class="comment">
    <div class="comment-flex">
      <span class="material-icons">sentiment_satisfied_alt</span>
      <input type="text" placeholder="Add Comment" />
      <a href="">Add</a>
    </div>
  </div>
</div>
