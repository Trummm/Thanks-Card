<header class="header">
  <div class="main-logo">
    <%= link_to dashboard_path do %>
      <%= image_tag('cat_logo.png', width: '180px') %>
    <% end %>
  </div>

  <div class="main-search">
    <%= render 'shared/form_search' %>
  </div>

  <div class="main-list">
    <%= link_to dashboard_path, class: 'icon-link', style: "margin: 0 10px" do %>
      <svg aria-label="Trang chủ" class="_ab6-" color="#262626" fill="#fff" height="24" role="img" viewBox="0 0 24 24" width="24"><path d="M9.005 16.545a2.997 2.997 0 012.997-2.997h0A2.997 2.997 0 0115 16.545V22h7V11.543L12 2 2 11.543V22h7.005z" fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></path></svg>
    <% end %>

    <%= link_to '#', class: 'icon-link', style: "margin: 0 10px" do %>
      <svg aria-label="Messenger" class="_8-yf5 " color="#262626" fill="#262626" height="24" role="img" viewBox="0 0 24 24" width="24"><path d="M12.003 2.001a9.705 9.705 0 110 19.4 10.876 10.876 0 01-2.895-.384.798.798 0 00-.533.04l-1.984.876a.801.801 0 01-1.123-.708l-.054-1.78a.806.806 0 00-.27-.569 9.49 9.49 0 01-3.14-7.175 9.65 9.65 0 0110-9.7z" fill="none" stroke="currentColor" stroke-miterlimit="10" stroke-width="1.739"></path><path d="M17.79 10.132a.659.659 0 00-.962-.873l-2.556 2.05a.63.63 0 01-.758.002L11.06 9.47a1.576 1.576 0 00-2.277.42l-2.567 3.98a.659.659 0 00.961.875l2.556-2.049a.63.63 0 01.759-.002l2.452 1.84a1.576 1.576 0 002.278-.42z" fill-rule="evenodd"></path></svg>
    <% end %>

    <label for="drop-input-3">
      <svg aria-label="Bài viết mới" class="_ab6-" color="#262626" fill="#262626" height="24" role="img" viewBox="0 0 24 24" width="24"><path d="M2 12v3.45c0 2.849.698 4.005 1.606 4.944.94.909 2.098 1.608 4.946 1.608h6.896c2.848 0 4.006-.7 4.946-1.608C21.302 19.455 22 18.3 22 15.45V8.552c0-2.849-.698-4.006-1.606-4.945C19.454 2.7 18.296 2 15.448 2H8.552c-2.848 0-4.006.699-4.946 1.607C2.698 4.547 2 5.703 2 8.552z" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></path><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="6.545" x2="17.455" y1="12.001" y2="12.001"></line><line fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" x1="12.003" x2="12.003" y1="6.545" y2="17.455"></line></svg>
    </label>  

      <input id ="drop-input-3" class="drop-input-checked-3" hidden type="checkbox"/>

      <div class="modal">
        <label for="drop-input-3" class="mask"></label>

        <label for="drop-input-3" class="material-icons" style="float: right;color: #fff;position: relative;z-index: 999999999;font-size: 2.4rem;cursor: pointer;">close</label>

        <div class="post-main" style="">
          <%= form_with model: @thank_card, class: 'post' do |f| %>
          <div class="to-member">
            <%= f.label :To, class: 'to-member-span', style: 'font-size:1rem'%>
            <%= f.collection_select :user_take_thank_card_id, User.where("id != #{current_user.id}"), :id, :name, prompt: true %>
          </div>

          <div class="template">
            <%= f.label :Template, class: 'to-member-span', style: 'font-size:1rem' %>
            <%= f.collection_select :card_template_id, CardTemplate.all, :id, :name, prompt: true %>
          </div>
            
          <div class="title-post">
            <%= f.label :message, style: 'font-size:1rem'%>
            <%= f.text_area :message, row: 3, column: 10 %>
          </div>

          <div class="submit-feed">
            <input type="submit" value="POST">
          </div>
          <% end %>
        </div>
      </div>

    <%= link_to '#', class: 'icon-link', style: "margin: 0 10px" do %>
      <svg aria-label="Tìm người" class="_8-yf5 " color="#262626" fill="#262626" height="24" role="img" viewBox="0 0 24 24" width="24"><polygon fill="none" points="13.941 13.953 7.581 16.424 10.06 10.056 16.42 7.585 13.941 13.953" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></polygon><polygon fill-rule="evenodd" points="10.06 10.056 13.949 13.945 7.581 16.424 10.06 10.056"></polygon><circle cx="12.001" cy="12.005" fill="none" r="10.5" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle></svg>
    <% end %>

    <label for="drop-input-2" class="notify">
      <svg aria-label="Nguồn cấp dữ liệu hoạt động" class="_ab6-" color="#262626" fill="#262626" height="24" role="img" viewBox="0 0 24 24" width="24"><path d="M16.792 3.904A4.989 4.989 0 0121.5 9.122c0 3.072-2.652 4.959-5.197 7.222-2.512 2.243-3.865 3.469-4.303 3.752-.477-.309-2.143-1.823-4.303-3.752C5.141 14.072 2.5 12.167 2.5 9.122a4.989 4.989 0 014.708-5.218 4.21 4.21 0 013.675 1.941c.84 1.175.98 1.763 1.12 1.763s.278-.588 1.11-1.766a4.17 4.17 0 013.679-1.938m0-2a6.04 6.04 0 00-4.797 2.127 6.052 6.052 0 00-4.787-2.127A6.985 6.985 0 00.5 9.122c0 3.61 2.55 5.827 5.015 7.97.283.246.569.494.853.747l1.027.918a44.998 44.998 0 003.518 3.018 2 2 0 002.174 0 45.263 45.263 0 003.626-3.115l.922-.824c.293-.26.59-.519.885-.774 2.334-2.025 4.98-4.32 4.98-7.94a6.985 6.985 0 00-6.708-7.218z"></path></svg>
      <input id ="drop-input-2" class="drop-input-checked-2" hidden type="checkbox"/>

      <ul class="hide-list-2" style="list-style:none;border-radius:10px;overflow-y: scroll;">
        <h5 style="padding: 10px 0 0 20px">Notify</h5>
        <%= render @activities %>
      </ul>
    </label>
    
      <label class="material-icons header_icon-search-right-drop" for="drop-input">
        <% if current_user.image.present? %>
          <%= image_tag(current_user.image, style: "border-radius: 50%; width: 32px; height: 32px") %>
        <% else %>
          <%= image_tag('default.png', style: "border-radius: 50%; width: 32px; height: 32px") %>
        <% end %>

        <input id="drop-input" class="drop-input-checked" hidden="" type="checkbox" />

        <ul class="hide-list" style="font-family: -apple-system,system-ui,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;">
          <li class="hide-list-item" style="display: flex; align-items:center">
            <svg aria-label="Trang cá nhân" class="_8-yf5 " color="#262626" fill="#262626" height="16" role="img" viewBox="0 0 24 24" width="16"><circle cx="12.004" cy="12.004" fill="none" r="10.5" stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2"></circle><path d="M18.793 20.014a6.08 6.08 0 00-1.778-2.447 3.991 3.991 0 00-2.386-.791H9.38a3.994 3.994 0 00-2.386.791 6.09 6.09 0 00-1.779 2.447" fill="none" stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2"></path><circle cx="12.006" cy="9.718" fill="none" r="4.109" stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2"></circle></svg>
            <%= link_to "PROFILE", user_path(current_user), style: "margin-left: 10px" %>
          </li>
          <li class="hide-list-item" style="display: flex; align-items:center">
          <svg aria-label="Đã lưu" class="_8-yf5 " color="#262626" fill="#262626" height="16" role="img" viewBox="0 0 24 24" width="16"><polygon fill="none" points="20 21 12 13.44 4 21 4 3 20 3 20 21" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></polygon></svg>
            <%= link_to "SAVE", "#", style: "margin-left: 10px" %>
          </li>
          <li class="hide-list-item" style="display: flex; align-items:center">
            <svg aria-label="Cài đặt" class="_8-yf5 " color="#262626" fill="#262626" height="16" role="img" viewBox="0 0 24 24" width="16"><circle cx="12" cy="12" fill="none" r="8.635" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"></circle><path d="M14.232 3.656a1.269 1.269 0 01-.796-.66L12.93 2h-1.86l-.505.996a1.269 1.269 0 01-.796.66m-.001 16.688a1.269 1.269 0 01.796.66l.505.996h1.862l.505-.996a1.269 1.269 0 01.796-.66M3.656 9.768a1.269 1.269 0 01-.66.796L2 11.07v1.862l.996.505a1.269 1.269 0 01.66.796m16.688-.001a1.269 1.269 0 01.66-.796L22 12.93v-1.86l-.996-.505a1.269 1.269 0 01-.66-.796M7.678 4.522a1.269 1.269 0 01-1.03.096l-1.06-.348L4.27 5.587l.348 1.062a1.269 1.269 0 01-.096 1.03m11.8 11.799a1.269 1.269 0 011.03-.096l1.06.348 1.318-1.317-.348-1.062a1.269 1.269 0 01.096-1.03m-14.956.001a1.269 1.269 0 01.096 1.03l-.348 1.06 1.317 1.318 1.062-.348a1.269 1.269 0 011.03.096m11.799-11.8a1.269 1.269 0 01-.096-1.03l.348-1.06-1.317-1.318-1.062.348a1.269 1.269 0 01-1.03-.096" fill="none" stroke="currentColor" stroke-linejoin="round" stroke-width="2"></path></svg>
            <%= link_to "SETTING", "#", style: "margin-left: 10px" %>
          </li>
          <li class="hide-list-item" style="display: flex; align-items:center">
            <svg aria-label="Chuyển tài khoản" class="_8-yf5 " color="#262626" fill="#262626" height="16" role="img" viewBox="0 0 24 24" width="16"><path d="M8 8.363a1 1 0 00-1-1H4.31a8.977 8.977 0 0114.054-1.727 1 1 0 101.414-1.414A11.003 11.003 0 003 5.672V3.363a1 1 0 10-2 0v5a1 1 0 001 1h5a1 1 0 001-1zm14 6.274h-5a1 1 0 000 2h2.69a8.977 8.977 0 01-14.054 1.727 1 1 0 00-1.414 1.414A11.004 11.004 0 0021 18.33v2.307a1 1 0 002 0v-5a1 1 0 00-1-1z"></path></svg>
            <%= link_to "LOGOUT", logout_path, style: "margin-left: 10px" %>
          </li>
        </ul>
      </label>
  </div>
</header>
