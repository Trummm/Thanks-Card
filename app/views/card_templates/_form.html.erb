<%= form_with model: @card_template, class: 'card' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "custom-file-input" %>

  <%= f.label :background %>
  <%= f.file_field :background, class: 'form-control' %>

  <%= f.label :top %>
  <%= f.text_field :top, class: "custom-file-input" %>

  <%= f.label :right %>
  <%= f.text_field :right, class: 'form-control' %>

  <%= f.label :bottom %>
  <%= f.text_field :bottom, class: 'form-control' %>

  <%= f.label :left %>
  <%= f.text_field :left, class: 'form-control' %>

  <%= f.submit yield(:text_btn), class: 'btn btn-primary' %>
<% end %>
